@model IEnumerable<BikeHire.Models.Bike>

@{
    ViewBag.Title = "Bike listing";
}

<h4>@ViewBag.title</h4>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalChargePerDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BikeAvailable)
        </th>
<th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RentalChargePerDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BikeAvailable)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BikeID }) |
            @Html.ActionLink("Details", "Details", new { id=item.BikeID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BikeID })
        </td>
    </tr>
}
</table>

<th>
    <p>
        @Html.ActionLink("Create new bike entry", "Create")
    </p>
</th>